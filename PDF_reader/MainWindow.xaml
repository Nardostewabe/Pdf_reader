<Window x:Class="PDF_reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">

            <TextBlock Name="welcome" Text="Welcome To PDF manager" HorizontalAlignment="Center"/>
            <TextBlock Name="messg" Text="Your Personlized Pdf manager and reader. Please Log in or Sign up to continue." HorizontalAlignment="Center"/>

            <Button Content="Go To User Page" Width="150px" Height="40px" Margin="20,20" Name="GoToUser" Click="GoToUserClicked"/>

        </StackPanel>
      
    </Grid>
</Window>
