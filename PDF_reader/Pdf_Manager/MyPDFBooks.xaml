<Page x:Class="PDF_reader.Pdf_Manager.MyPDFBooks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PDF_reader.Pdf_Manager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyPDFBooks">

    <Grid>
        <ListView x:Name="PdfListView" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File Name" DisplayMemberBinding="{Binding FileName}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Add PDF" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="AddPdfButton_Click"/>
    </Grid>
</Page>
