<Window x:Class="PDF_reader.UserHandler.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDF_reader.UserHandler"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="UsernameTextBox" PlaceholderText="Enter Username" Margin="20"/>
        <PasswordBox x:Name="PasswordBox" Margin="20,60,20,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,120,20,0">
            <Button Content="Login" Click="Login_Click" Width="100" Margin="10"/>
            <Button Content="Sign Up" Click="SignUp_Click" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
